<Window x:Class="WpfOpenFoodFacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOpenFoodFacts"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid VerticalAlignment="Top">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5">

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Width="150" 
                     Height="25" 
                     Text="3596710304578"
                     Name="Barcode" />
                <Button Content="Bar code" 
                    Width="100" 
                    Height="25" 
                    Click="get_product_Click" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Facets" 
                    Width="100" 
                    Height="25" 
                    Click="get_by_facets_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
